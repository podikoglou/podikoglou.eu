<div class="writings">

  <!-- articles -->
  <div id="articles">

    <h3>Articles</h3>

    <ul>
      {%- for post in collections.article -%}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
          <time datetime="{{ post.data.date }}">{{ post.data.date | date: "%b %Y" }}</time>
        </li>
      {%- endfor -%}
    </ul>

  </div>

  <!-- other writing -->
  <div id="misc">

    <h3>Other Writing</h3>

    <ul>
      {% for page in collections.misc %}
        {% unless page.data.hidden %}
          <li>
            <a href="{{ page.url }}">{{ page.data.title }}</a>{% unless forloop.last %},{% endunless %}
          </li>
        {% endunless %}
      {% endfor %}
    </ul>

  </div>

</div>
